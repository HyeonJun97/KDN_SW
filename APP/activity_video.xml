<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/video"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".video">

    <TextView
        android:id="@+id/cctvHead"
        android:layout_width="413dp"
        android:layout_height="79dp"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="10dp"
        android:background="#558B2F"
        android:gravity="clip_horizontal|center"
        android:text="C C T V"
        android:textAllCaps="true"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:textColor="#FFFFFF"
        android:textSize="60sp"
        android:textStyle="bold"
        android:typeface="normal"
        app:fontFamily="casual"
        app:layout_constraintBottom_toTopOf="@+id/cctvDateTime"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/cctvDateTime"
        android:layout_width="242dp"
        android:layout_height="33dp"
        android:layout_marginBottom="10dp"
        android:gravity="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/cctvVideo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cctvHead"
        tools:text="22" />

    <WebView
        android:id="@+id/cctvVideo"
        android:layout_width="394dp"
        android:layout_height="442dp"
        android:layout_marginBottom="80dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cctvDateTime" />
</androidx.constraintlayout.widget.ConstraintLayout>